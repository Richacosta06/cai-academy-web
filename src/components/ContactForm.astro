---
interface Props {
  titulo?: string;
}

const { titulo = "Envíanos un Mensaje" } = Astro.props;
---

<div>
  <h3 class="text-2xl font-semibold text-white mb-4">
    {titulo}
  </h3>
  <form class="info-card p-6 md:p-8">
    <div class="mb-4">
      <label
        for="contact-name"
        class="block text-sm font-medium mb-1 text-white">Nombre</label
      >
      <input
        type="text"
        id="contact-name"
        name="name"
        required
        class="w-full bg-[#2d3748] border border-[#4a5568] text-[#e2e8f0] rounded-lg px-4 py-3 focus:border-cai-gold focus:ring-2 focus:ring-cai-gold/30 focus:outline-none transition-all duration-300"
        placeholder="Tu Nombre Completo"
      />
    </div>
    <div class="mb-4">
      <label
        for="contact-email"
        class="block text-sm font-medium mb-1 text-white"
        >Correo Electrónico</label
      >
      <input
        type="email"
        id="contact-email"
        name="email"
        required
        class="w-full bg-[#2d3748] border border-[#4a5568] text-[#e2e8f0] rounded-lg px-4 py-3 focus:border-cai-gold focus:ring-2 focus:ring-cai-gold/30 focus:outline-none transition-all duration-300"
        placeholder="tu@email.com"
      />
    </div>
    <div class="mb-4">
      <label
        for="contact-subject"
        class="block text-sm font-medium mb-1 text-white">Asunto</label
      >
      <input
        type="text"
        id="contact-subject"
        name="subject"
        class="w-full bg-[#2d3748] border border-[#4a5568] text-[#e2e8f0] rounded-lg px-4 py-3 focus:border-cai-gold focus:ring-2 focus:ring-cai-gold/30 focus:outline-none transition-all duration-300"
        placeholder="Ej: Consulta sobre inscripción"
      />
    </div>
    <div class="mb-6">
      <label
        for="contact-message"
        class="block text-sm font-medium mb-1 text-white">Mensaje</label
      >
      <textarea
        id="contact-message"
        name="message"
        rows="5"
        required
        class="w-full bg-[#2d3748] border border-[#4a5568] text-[#e2e8f0] rounded-lg px-4 py-3 focus:border-cai-gold focus:ring-2 focus:ring-cai-gold/30 focus:outline-none transition-all duration-300"
        placeholder="Escribe tu consulta aquí..."></textarea>
    </div>
    <div class="text-center">
      <button
        type="submit"
        class="bg-cai-gold text-cai-dark-bg font-semibold px-8 py-3 rounded-full text-lg shadow-[0_4px_10px_rgba(255,215,0,0.2)] hover:bg-[#e6c300] hover:-translate-y-0.5 hover:shadow-[0_6px_15px_rgba(255,215,0,0.3)] transition-all duration-300"
      >
        <i class="fas fa-paper-plane mr-2"></i>Enviar Mensaje
      </button>
    </div>
  </form>
</div>

