---
import "../styles/global.css";

const menuLinks = [
  {
    text: "Programas",
    href: "/programas",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  },
  {
    text: "Instalaciones",
    href: "/#instalaciones",
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
  },
  {
    text: "Profesores",
    href: "/#entrenadores",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  },
  {
    text: "Contacto",
    href: "/#contacto",
    icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
];

const leftLinks = menuLinks.slice(0, 2);
const rightLinks = menuLinks.slice(2);
---

<header
  class="text-white fixed top-0 w-full z-50 bg-transparent transition-all duration-300 hidden md:block"
  id="main-header"
>
  <nav
    class="flex items-center px-6 py-8 text-sm font-medium justify-between max-w-6xl mx-auto relative"
  >
    <!-- Enlaces izquierdos -->
    <div class="flex gap-12">
      {
        leftLinks.map((link) => (
          <a
            href={link.href}
            class="text-xl hover:text-yellow-500 transition-colors"
          >
            {link.text}
          </a>
        ))
      }
    </div>

    <!-- Enlaces derechos -->
    <div class="flex gap-12">
      {
        rightLinks.map((link) => (
          <a
            href={link.href}
            class="text-xl hover:text-yellow-500 transition-colors"
          >
            {link.text}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<!-- Menú móvil -->
<nav
  id="mobile-menu"
  class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 z-[100] md:hidden"
>
  <div class="flex justify-around items-center h-16 bg-[var(--cai-card-bg)]">
    {
      menuLinks.map((link) => (
        <a
          href={link.href}
          class="flex flex-col items-center justify-center w-full h-full text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d={link.icon}
            />
          </svg>
          <span class="text-xs mt-1">{link.text}</span>
        </a>
      ))
    }
  </div>
</nav>

<script type="module">
  const header = document.getElementById("main-header");

  const handleScroll = () => {
    if (!header) return;
    if (window.scrollY > 0) {
      header.classList.add("bg-black/50", "shadow-lg");
      header.classList.remove("bg-transparent");
    } else {
      header.classList.remove("bg-black/50", "shadow-lg");
      header.classList.add("bg-transparent");
    }
  };

  window.addEventListener("scroll", handleScroll);
</script>
