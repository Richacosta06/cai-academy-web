---
import "../styles/global.css";

const menuLinks = [
  { text: "Programas", href: "/programas" },
  { text: "Instalaciones", href: "/instalaciones" },
  { text: "Profesores", href: "/profesores" },
  { text: "Contacto", href: "/contacto" },
];

const leftLinks = menuLinks.slice(0, 2);
const rightLinks = menuLinks.slice(2);
---

<header
  class="text-white fixed top-0 w-full z-50 bg-transparent transition-all duration-300"
  id="main-header"
>
  <nav
    class="flex items-center px-6 py-8 text-sm font-medium justify-between max-w-6xl mx-auto relative"
  >
    <!-- Botón menú móvil -->
    <button
      id="menu-button"
      class="lg:hidden p-2 hover:bg-gray-100 rounded-md z-50"
      aria-label="Menú"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Enlaces izquierdos -->
    <div class="hidden lg:flex gap-12">
      {
        leftLinks.map((link) => (
          <a
            href={link.href}
            class="text-xl hover:text-yellow-500 transition-colors"
          >
            {link.text}
          </a>
        ))
      }
    </div>

    <!-- Enlaces derechos -->
    <div class="hidden lg:flex gap-12">
      {
        rightLinks.map((link) => (
          <a
            href={link.href}
            class="text-xl hover:text-yellow-500 transition-colors"
          >
            {link.text}
          </a>
        ))
      }
    </div>

    <!-- Menú móvil -->
    <div
      id="mobile-menu"
      class="fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 ease-in-out md:hidden"
    >
      <div class="flex flex-col items-center justify-center h-full gap-8">
        <button
          id="mobile-menu-button"
          class="absolute top-4 right-4 p-2 hover:bg-gray-100 rounded-md z-50"
          aria-label="Cerrar menú"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        {
          menuLinks.map((link) => (
            <a
              href={link.href}
              class="text-2xl text-black hover:text-blue-600 transition-colors"
            >
              {link.text}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<!-- ✅ Script cliente directamente compatible según documentación -->
<script type="module">
  const menuButton = document.getElementById("menu-button");
  const closeButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const header = document.getElementById("main-header");

  const handleScroll = () => {
    if (!header) return;
    if (window.scrollY > 0) {
      header.classList.add("bg-black/50", "shadow-lg");
      header.classList.remove("bg-transparent");
    } else {
      header.classList.remove("bg-black/50", "shadow-lg");
      header.classList.add("bg-transparent");
    }
  };

  window.addEventListener("scroll", handleScroll);

  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.remove("translate-x-full");
    mobileMenu?.classList.add("translate-x-0");
  });

  closeButton?.addEventListener("click", () => {
    mobileMenu?.classList.remove("translate-x-0");
    mobileMenu?.classList.add("translate-x-full");
  });

  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.remove("translate-x-0");
      mobileMenu?.classList.add("translate-x-full");
    });
  });
</script>
